{
	"name": "magia",
	"description": "Magia 2D Game Engine",
	"copyright": "Copyright Â© 2021, Enalye",
	"authors": [
		"Enalye"
	],
	"dependencies": {
		"bindbc-opengl": "~>0.17.1",
		"bindbc-sdl": "~>0.21.4",
		"grimoire": {
			"version": "~master",
			"path": "../grimoire"
		}
	},
	"versions": [
		"GL_41",
		"GL_ARB",
		"SDL_202",
		"SDL_Image_204",
		"SDL_TTF_2014",
		"SDL_Mixer_204"
	],
	"targetName": "magia",
	"targetType": "executable",
	"workingDirectory": "..",
	"buildTypes": {
		"unittest": {
			"buildOptions": ["unittests", "debugMode", "debugInfo"]
		},
		"debug": {
			"buildOptions": ["debugMode", "debugInfo"]
		},
		"release": {
			"buildOptions": ["releaseMode", "optimize", "inline", "noBoundsCheck"]
		}
	},
	"configurations": [
		{
			"name": "linux-build",
			"platforms": ["linux"],
			"targetPath": "../bin",
			"postBuildCommands": [
				"cp ../lib$ARCH/*.dll ../bin"
			]
		},
		{
			"name": "windows-build",
			"platforms": ["windows"],
			"targetPath": "../bin$ARCH"
		},
		{
			"name": "windows-release",
			"platforms": ["windows"],
			"targetPath": "../release$ARCH/game",
			"lflags":[
				"-subsystem:windows",
				"-entry:mainCRTStartup"
			],
			"postBuildCommands": [
				"copy ..\\lib$ARCH\\*.dll ..\\release$ARCH\\game"
			]
		}
	]
}